doctype html
html
  head
    title Update Book
  body
    h1 Update Book
    form(action=`/books/update/${book._id}`, method="post")
      input(type="hidden", name="_method", value="PUT")
      table
        tr
          td
            label(for="title") Title:
          td
            input(type="text" name="title" id="title" value=book.title)
        tr
          td
            label(for="author") Author:
          td
            input(type="text" name="author" id="author" value=book.author)
        tr
          td
            label(for="genre") Genre:
          td
            input(type="text" name="genre" id="genre" value=book.genre)
        tr
          td
            label(for="published") Published Year:
          td
            input(type="number" name="published_year" id="published_year" value=book.published_year)
        tr
          td(colspan="2")
            button(type="submit") Update Book
